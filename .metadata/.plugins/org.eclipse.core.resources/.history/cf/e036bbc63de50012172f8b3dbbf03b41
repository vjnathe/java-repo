package com.cisco.chatmodule;
import java.io.*;
public class Server {

	public static void main(String[] args) {
		
				ServerSocket server=null;
				DataInputStream fromServer;
				DataOutputStream toServer;
				try {
					client=new Socket(InetAddress.getLocalHost(),2233);
					fromServer=new DataInputStream(client.getInputStream()); 
					toServer=new DataOutputStream(client.getOutputStream());
					DataInputStream fromUser=new DataInputStream(System.in);
					while(true){
						System.out.println(fromServer.readLine());
						String input=fromUser.readLine();
						if(input.equals("Q"))
							break;
						toServer.writeChars(input);
					}
				} catch (UnknownHostException e) {
					e.printStackTrace();
				} 
		       finally {
		    	  client.close();
		       }
			}

		


	}


